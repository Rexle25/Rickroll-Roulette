{
  "manifest_version": 2,
  "name": "Rickroll Redirect",
  "version": "1.0",
  "description": "A browser extension that redirects links to a Rickroll with a customizable probability.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "rickroll@youraddon.com",
      "strict_min_version": "42.0"
    }
  }
}
